<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quenmatkhau">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="200dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/ed_taikhoan"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="#CDA0AF"
            android:hint="Nhập tài khoản"
            android:inputType="text" />
        <EditText
            android:id="@+id/ed_sodienthoai"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="#CDA0AF"
            android:hint="Nhập số điện thoại"
            android:inputType="text" />
        <EditText
            android:id="@+id/ed_Nhapmatkhaumoi"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
             android:layout_marginTop="10dp"
            android:background="#CDA0AF"
            android:hint="Nhập mật khẩu mới"
            android:inputType="text" />

        <EditText
            android:id="@+id/ed_Nhaplaimatkhaumoi"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#CDA0AF"
            android:hint="Nhập mật khẩu    "
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_Tao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="#4CAF50"
            android:text="Tạo lại mật khẩu mới" />

    </LinearLayout>
</LinearLayout>